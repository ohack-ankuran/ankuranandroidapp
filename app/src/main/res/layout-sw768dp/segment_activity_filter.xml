<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="horizontal"
    android:padding="10dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/llStartDateContainer"
        android:layout_weight="2"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@android:color/darker_gray"
            android:lineSpacingExtra="4sp"
            android:text="@string/txt_start_date"
            />

        <TextView
            android:id="@+id/tvStartDate"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/calendar_24dp"
            android:hint="11 JAN 2019"
            android:layout_weight="7"
            android:layout_width="match_parent"
            android:paddingLeft="5dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llEndDateContainer"
        android:layout_marginLeft="10dp"
        android:layout_weight="2"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@android:color/darker_gray"
            android:lineSpacingExtra="4sp"
            android:text="@string/txt_end_date"
            />

        <TextView
            android:id="@+id/tvEndDate"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/calendar_24dp"
            android:hint="11 JAN 2019"
            android:layout_weight="7"
            android:layout_width="match_parent"
            android:paddingLeft="5dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <Button
        android:layout_gravity="center"
        android:layout_weight="1"
        android:id="@+id/btnView"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="@string/btxt_view"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        android:background="@drawable/secondary_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
</LinearLayout>